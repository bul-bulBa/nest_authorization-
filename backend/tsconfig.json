{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@prisma/__generated__": ["prisma/__generated__"],
      "@prisma/__generated__/*": ["prisma/__generated__/*"]
    },

    "incremental": true,
    "skipLibCheck": true,

    "esModuleInterop": true,

    "types": ["node", "express", "express-session"],
    "jsx": "react"
  }
}
